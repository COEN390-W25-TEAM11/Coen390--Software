<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Material Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBarDashboard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIconTint="@android:color/white"
            app:titleTextColor="@android:color/white"
            app:menu="@menu/dashboard"
            app:title="Dashboard"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/helloUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Menu Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addLightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Add a new combination"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:textColor="#6200EE"/>

        <TextView
            android:id="@+id/myAccountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• My Account"
            android:textSize="16sp"
            android:clickable="true"
            android:textColor="#6200EE"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="#E0E0E0"/>

    <!-- Lights Section Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:text="Click on a light or sensor below to control it"
        android:textSize="16sp"/>

    <!-- Lights List -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"/>

</LinearLayout>
